<?xml version="1.0" encoding="UTF-8" ?>
<hibernate-configuration xmlns="http://www.hibernate.org/xsd/orm/cfg">
    <session-factory>
        <!--URL, USER AND PASS MUST GO!!!       -->
        <property name="connection.url">db.url=jdbc:mysql://localhost:3306/mixstarter</property>
        <property name="connection.username">root</property>
        <property name="connection.password">daniel</property>
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="dialect">org.hibernate.dialect.MySQLDialect</property>

        <!--Database to POJO mapping-->
        <mapping class="org.daniclo.mixstarter.model.Album"></mapping>
        <mapping class="org.daniclo.mixstarter.model.Comment"></mapping>
        <mapping class="org.daniclo.mixstarter.model.Followers"></mapping>
        <mapping class="org.daniclo.mixstarter.model.Post"></mapping>
        <mapping class="org.daniclo.mixstarter.model.Song"></mapping>
        <mapping class="org.daniclo.mixstarter.model.Tag"></mapping>
        <mapping class="org.daniclo.mixstarter.model.User"></mapping>

    </session-factory>
</hibernate-configuration>